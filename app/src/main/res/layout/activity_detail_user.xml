<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/purple_gradient"
    tools:context=".DetailUserActivity">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_user"
        android:transitionName="imgProfile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:elevation="20sp"
        android:src="@drawable/user1"
        app:civ_border_color="#FFFFFF"
        app:civ_border_width="2dp"
        android:layout_marginBottom="8dp"
        />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_user"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:text="@string/name"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        />


    <androidx.cardview.widget.CardView
        android:id="@+id/cv_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name"
        android:elevation="12dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:weightSum="2">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#40a8c4"
                android:background="@drawable/border"
                >

                <TextView
                    android:id="@+id/tv_following"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:text="@string/following"
                    />

                <TextView
                    android:id="@+id/showFollowing"
                    android:layout_marginBottom="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_following"
                    android:layout_centerHorizontal="true"
                    android:text="@string/following"
                    android:textColor="#FFFFFF"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:backgroundTint="#ffc93c"
                >

                <TextView
                    android:id="@+id/tv_follower"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textStyle="bold"
                    android:text="@string/follower"
                    android:textColor="#FFFFFF"
                    />
                <TextView
                    android:id="@+id/showFollower"
                    android:layout_marginBottom="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_follower"
                    android:layout_centerHorizontal="true"
                    android:text="@string/follower"
                    android:textColor="#FFFFFF"
                    />

            </RelativeLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/cv_user"
        android:background="#FFFFFF"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:orientation="vertical"
        android:gravity="fill_horizontal"
        android:paddingTop="20dp"
        >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:textColor="#6242d4"
            android:textStyle="bold"
            android:text="@string/username"
            android:textSize="14sp"

            />

        <TextView
            android:id="@+id/tv_username"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/username"
            android:textSize="17sp"
            android:textColor="#6242d4"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:textColor="#6242d4"
            android:textStyle="bold"
            android:text="@string/company"
            android:textSize="14sp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="@string/company"
            android:textSize="17sp"
            android:textColor="#6242d4"
            android:id="@+id/showCompany"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:textColor="#6242d4"
            android:textStyle="bold"
            android:text="@string/repository"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="@string/repository"
            android:id="@+id/showRepo"
            android:textSize="17sp"
            android:textColor="#6242d4"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:textColor="#6242d4"
            android:textStyle="bold"
            android:text="@string/location"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="@string/location"
            android:id="@+id/showLocation"
            android:textSize="17sp"
            android:textColor="#6242d4"
            />
    </LinearLayout>

</RelativeLayout>